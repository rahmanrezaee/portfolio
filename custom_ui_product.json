{
  "type": "scaffold",
  "args": {
    "appBar": {
      "type": "app_bar",
      "args": {
        "title": {
          "type": "text",
          "args": {
            "text": "Images"
          }
        }
      }
    },
    "body": {
      "type": "list_view",
      "args": {
        "children": [
          {
            "type": "padding",
            "args": {
              "padding": {
                "left": 16,
                "top": 8,
                "right": 16,
                "bottom": 8
              },
              "child": {
                "type": "text",
                "args": {
                  "text": "Network"
                }
              }
            }
          },
          {
            "type": "padding",
            "args": {
              "padding": {
                "left": 16,
                "top": 8,
                "right": 16,
                "bottom": 8
              },
              "child": {
                "type": "network_image",
                "args": {
                  "fit": "fitWidth",
                  "src": "https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/Google.png/320px-Google.png"
                }
              }
            }
          }
        ]
      }
    }
  }
}
